<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget38"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/blue_gradent_background"
>


<RelativeLayout
android:id="@+id/buttonLayout"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
>



<Button
android:id="@+id/AddDelevery"
android:layout_width="160dip"
android:layout_height="80dip"
android:text="@string/addPickup"
android:layout_alignParentRight="true"
android:textSize="22sp"
android:layout_alignParentBottom="true">
</Button>
<Button
android:id="@+id/Checkout"
android:layout_width="160dip"
android:layout_height="80dip"
android:text="@string/summary"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:textSize="22sp"
></Button>
<Button android:text="Improve This App!\nSend developer feedback." android:id="@+id/button1" android:layout_width="wrap_content" android:layout_above="@+id/Checkout" android:layout_alignRight="@+id/Checkout" android:layout_alignParentLeft="true" android:layout_height="75dip"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button2" android:layout_alignBottom="@+id/button1" android:layout_alignLeft="@+id/AddDelevery" android:layout_alignTop="@+id/button1" android:layout_alignParentRight="true" android:text="@string/streetHire" android:textSize="22sp"></Button>

</RelativeLayout>





<RelativeLayout android:layout_width="fill_parent" android:layout_height="265dip">

 <com.catglo.taxidroid.OrderListView
      android:id="@+id/orderList"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:scrollbars="vertical" 
      />
      
<TextView
android:id="@+id/HelpDrag"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/drag_deliveries" 
android:background="@drawable/bubble_point_top_left"
android:layout_marginLeft="25dip"

android:textSize="19sp"
android:textColor="#FF000000"
android:layout_below="@+id/orderList"
android:visibility="gone"
>
</TextView>      
      
    
</RelativeLayout>






</RelativeLayout>
